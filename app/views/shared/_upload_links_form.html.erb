<%= render "govuk_publishing_components/components/heading", {
  text: title,
  heading_level: 1,
  font_size: "l",
  margin_bottom: 5,
} %>

<%= form_tag(form_path, multipart: true) do %>
  <%= render "govuk_publishing_components/components/file_upload", {
    label: { text: "Upload a file" },
    hint: "Accepts a CSV in the same format provided by the download option. Will create or update any link which
   has a value in the New URL or New Title columns.",
    name: "csv",
    accept: "text/csv",
  } %>
  <%= render "govuk_publishing_components/components/button", { text: "Upload Links" } %>
<% end %>
