<% title = gds_editor? ? "Services" : "Services for #{org_name_for_current_user}" %>
<% content_for :page_title, title %>

<% breadcrumb :services %>

<%= render "govuk_publishing_components/components/heading", {
  text: "#{title} (#{@services.count})",
  heading_level: 1,
  font_size: "l",
  margin_bottom: 5,
} %>

<% services_table_presenter = ServicesTablePresenter.new(@services, self) %>

<%= render "govuk_publishing_components/components/table", {
  filterable: true,
  label: "Filter Services",
  head: services_table_presenter.headers,
  rows:  services_table_presenter.rows,
} %>
